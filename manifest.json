  "shortcuts": [
    {
      "name": "Проводник",
      "short_name": "Проводник",
      "description": "Открыть проводник файлов",
      "url": "./index.html?app=explorer",
      "icons": [{ "src": "icons/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Калькулятор",
      "short_name": "Калькулятор",
      "description": "Открыть калькулятор",
      "url": "./index.html?app=calculator",
      "icons": [{ "src": "icons/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Параметры",
      "short_name": "Параметры",
      "description": "Открыть параметры системы",
      "url": "./index.html?app=settings",
      "icons": [{ "src": "icons/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Блокнот",
      "short_name": "Блокнот",
      "description": "Открыть блокнот",
      "url": "./index.html?app=notepad",
      "icons": [{ "src": "icons/icon-192.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "./index.html",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "file_handlers": [
    {
      "action": "./index.html",
      "accept": {
        "text/plain": [".txt"]
      }
    }
  ]
